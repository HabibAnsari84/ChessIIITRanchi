<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointsTable"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group League Standings"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/standings"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gradient1"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Aces from Group-1 and DEVILS u-KNIGHTED from Group-2 qualify for the semi-finals "
        android:textSize="20sp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textColor="@color/textcolor"
        android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="King pins and Rookie mistakes from Group-1 and Vienna Warriors and Stale Mates from Group-2 will face qualifiers and winners from each group will qualify for the semi-finals"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textColor="@color/textcolor1"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>